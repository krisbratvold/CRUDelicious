@model List<Dish>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to CRUDelicious</h1>
</div>
<div class="top mt-4">
    <h2 class="display-8 border-bottom border-dark">Check out some recent dishes!</h2>
    <h3><a asp-controller="Home" asp-action="AddDish">Add a Dish</a></h3>
</div>
<div class="content mt-4">
    @{
        foreach (Dish dish in Model)
        {
        <p><a asp-controller="Home" asp-action="Read" asp-route-dishId=@dish.DishId>@dish.Name</a> by @dish.Chef</p>
        }
    }
</div>
